<div class="row span8" style="margin-left:0px;">
<p>This is an admin function, please don't abuse it</p>
<h1>Listing players</h1>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Wins</th>
    <th>Losses</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.email %></td>
    <td><%= player.wins %></td>
    <td><%= player.losses %></td>
    <td><%= player.rating %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Player', new_player_path %>
</div>
